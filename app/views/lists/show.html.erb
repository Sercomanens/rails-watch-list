<h1><%= @list.name %> List</h1>

<% if @list.movies.any? %>
  <% @list.movies.each do |movie| %>
    <% bookmark = movie.bookmarks.find_by(list_id: @list.id) %>
    <div>
      <strong>Movie in this list:</strong> <%= movie.title %>
      <% if movie.poster_url.present? %>
        <%= image_tag(movie.poster_url, width: "300px") %>
      <% end %>
      <%= button_to 'Delete Bookmark', bookmark_path(bookmark), method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </div>
  <% end %>
<% else %>
  <p>No movies found in this list.</p>
<% end %>

<%= link_to 'Back to All Lists', lists_path %>

<h3>Add a movie to your <%= @list.name %> list</h3>
<%= link_to 'Add a new bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary' %>
