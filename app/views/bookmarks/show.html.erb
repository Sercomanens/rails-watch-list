<h1>Bookmark Details</h1>

<p>
  <strong>Movie:</strong>
  <%= @bookmark.movie.title %>
</p>

<p>
  <strong>List:</strong>
  <%= link_to @bookmark.list.name, list_path(@bookmark.list) %>
</p>

<p>
  <strong>Comment:</strong>
  <%= @bookmark.comment %>
</p>

<%= link_to 'Edit Bookmark', edit_bookmark_path(@bookmark) %> |
<%= link_to 'Back to All Bookmarks', bookmarks_path %> |
<%= link_to 'Delete Bookmark', bookmark_path(@bookmark), method: :delete, data: { confirm: 'Are you sure?' } %>
